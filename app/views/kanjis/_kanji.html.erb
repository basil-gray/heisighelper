<tr class="kanji-row" style="vertical-align: middle" data-content="<%= kanji.kanji %> | <%= kanji.entry %> | <%= kanji.frame_number %> | <%= kanji.radicals %>" id="<%= dom_id kanji %>">
  
  <td style="font-size: 150%"><a href="https://jisho.org/search/<%= kanji.kanji %> %23kanji" target="_blank"><%= kanji.kanji %></a></td>
  <td><%= kanji.entry %></td>
  <td><%= kanji.radicals %></td>
  <td><%= kanji.frame_number %></td>
  <td align="right"><button class="copy-btn btn btn-link" onclick="copyRowToClipboard(this)">Copy</button></td>

</tr>

<script>
  function copyRowToClipboard(button) {
    var rowData = $(button).closest('tr').find('td:not(:last-child)').map(function() {
      return $(this).text().trim();
    }).get().join(' | '); // Joining each column content with '|'

    var tempElement = $('<textarea>'); // Create a temporary textarea to copy content to clipboard
    $('body').append(tempElement);
    tempElement.val(rowData).select();
    document.execCommand('copy');
    tempElement.remove();

    alert('Row copied to clipboard!');
  }
</script>

